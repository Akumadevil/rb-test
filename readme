begin
    renderer.render("Index", doc.get_thumbs, doc.filter)

    doc.filter.each do |make|
      nodes = doc.search('work:contains("' + make + '")')

      renderer.render(make, nodes.get_thumbs, nodes.filter)

      nodes.filter.each do |model|
        #puts make + " = " + model

        subnodes = nodes.search('work:contains("' + model + '")')

        renderer.render(model, subnodes.get_thumbs, subnodes.filter)
      end
    end
=end